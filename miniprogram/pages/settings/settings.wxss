/* pages/settings/settings.wxss */

.settings-container {
  min-height: 100vh;
  background: #f5f5f5;
}

/* Tab 切换 */
.section-tabs {
  display: flex;
  background: #fff;
  border-bottom: 1rpx solid #f0f0f0;
}

.tab-item {
  flex: 1;
  text-align: center;
  padding: 28rpx 0;
  font-size: 28rpx;
  color: #666;
  position: relative;
}

.tab-item.active {
  color: #1890ff;
  font-weight: 600;
}

.tab-item.active::after {
  content: '';
  position: absolute;
  bottom: 0;
  left: 50%;
  transform: translateX(-50%);
  width: 60rpx;
  height: 4rpx;
  background: #1890ff;
  border-radius: 2rpx;
}

/* 区块内容 */
.section-content {
  padding: 24rpx;
}

.card {
  background: #fff;
  border-radius: 16rpx;
  padding: 32rpx;
  margin-bottom: 24rpx;
  box-shadow: 0 2rpx 12rpx rgba(0,0,0,0.08);
}

.card-header {
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin-bottom: 24rpx;
}

.card-title {
  font-size: 32rpx;
  font-weight: 600;
  color: #333;
}

/* 表单 */
.form-item {
  display: flex;
  align-items: center;
  margin-bottom: 20rpx;
}

.form-label {
  font-size: 28rpx;
  color: #666;
  width: 160rpx;
  flex-shrink: 0;
}

.form-input {
  flex: 1;
  font-size: 28rpx;
  padding: 16rpx;
  background: #f9f9f9;
  border-radius: 8rpx;
  color: #333;
}

.form-input.small {
  width: 120rpx;
  flex: none;
}

.picker-value {
  flex: 1;
  font-size: 28rpx;
  padding: 16rpx;
  background: #f9f9f9;
  border-radius: 8rpx;
  display: flex;
  justify-content: space-between;
  align-items: center;
  color: #333;
}

.picker-arrow {
  font-size: 24rpx;
  color: #999;
  margin-left: 8rpx;
}

.form-actions {
  display: flex;
  gap: 16rpx;
  margin-top: 24rpx;
}

/* 添加表单 */
.add-form {
  background: #f9f9f9;
  padding: 24rpx;
  border-radius: 12rpx;
  margin-bottom: 24rpx;
}

.form-title {
  font-size: 28rpx;
  font-weight: 600;
  color: #333;
  margin-bottom: 20rpx;
  display: block;
}

.form-row {
  display: flex;
  align-items: center;
  gap: 16rpx;
}

.form-separator {
  font-size: 28rpx;
  color: #999;
}

.flex-1 {
  flex: 1;
}

/* 按钮 */
.btn-add {
  background: #f5f5f5;
  border: 2rpx dashed #d9d9d9;
  border-radius: 12rpx;
  padding: 24rpx;
  text-align: center;
  color: #666;
  font-size: 28rpx;
}

.btn-small {
  padding: 12rpx 24rpx;
  font-size: 24rpx;
  border-radius: 8rpx;
  line-height: 1.5;
}

.btn-default {
  background: #f0f0f0;
  color: #666;
}

.btn-primary {
  background: linear-gradient(135deg, #1890ff, #36cfc9);
  color: #fff;
}

.btn-danger {
  background: #ff4d4f;
  color: #fff;
}

/* 列表 */
.item-list {
  margin-top: 16rpx;
}

.list-item {
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding: 20rpx 0;
  border-bottom: 1rpx solid #f0f0f0;
}

.list-item:last-child {
  border-bottom: none;
}

.item-content {
  flex: 1;
  display: flex;
  flex-wrap: wrap;
  align-items: center;
  gap: 8rpx;
}

.item-main {
  font-size: 28rpx;
  color: #333;
  font-weight: 500;
}

.item-sub {
  font-size: 28rpx;
  color: #666;
}

.item-keyword {
  font-size: 28rpx;
  color: #333;
  font-weight: 500;
}

.item-arrow {
  font-size: 24rpx;
  color: #999;
  margin: 0 8rpx;
}

.item-category {
  font-size: 26rpx;
  color: #1890ff;
}

.item-priority {
  font-size: 22rpx;
  color: #999;
  margin-left: 8rpx;
}

.item-actions {
  display: flex;
  gap: 16rpx;
  flex-shrink: 0;
}

.action-btn {
  font-size: 24rpx;
  padding: 8rpx 16rpx;
  border-radius: 6rpx;
}

.action-btn.primary {
  color: #1890ff;
  background: rgba(24, 144, 255, 0.1);
}

.action-btn.danger {
  color: #ff4d4f;
  background: rgba(255, 77, 79, 0.1);
}

/* 周期性账单 */
.recurring-main {
  display: flex;
  justify-content: space-between;
  width: 100%;
  margin-bottom: 8rpx;
}

.recurring-meta {
  display: flex;
  gap: 16rpx;
  width: 100%;
}

.item-amount {
  font-size: 28rpx;
  color: #ff4d4f;
  font-weight: 600;
}

.item-schedule {
  font-size: 24rpx;
  color: #999;
}

.item-disabled {
  font-size: 22rpx;
  color: #ff4d4f;
  background: rgba(255, 77, 79, 0.1);
  padding: 4rpx 12rpx;
  border-radius: 4rpx;
}

/* 空状态 */
.empty-state {
  padding: 40rpx 0;
  text-align: center;
}

.text-secondary {
  color: #999;
  font-size: 26rpx;
}

/* 备份弹窗 */
.modal-overlay {
  position: fixed;
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;
  background: rgba(0,0,0,0.5);
  display: flex;
  align-items: center;
  justify-content: center;
  z-index: 1000;
}

.modal-content {
  background: #fff;
  border-radius: 16rpx;
  padding: 32rpx;
  width: 80%;
  max-height: 70vh;
  overflow-y: auto;
}

.modal-title {
  font-size: 32rpx;
  font-weight: 600;
  color: #333;
  margin-bottom: 24rpx;
  display: block;
  text-align: center;
}

.backup-list {
  max-height: 400rpx;
  overflow-y: auto;
  margin-bottom: 24rpx;
}

.backup-item {
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding: 20rpx 0;
  border-bottom: 1rpx solid #f0f0f0;
}

.backup-info {
  flex: 1;
}

.backup-name {
  font-size: 28rpx;
  color: #333;
  display: block;
}

.backup-date {
  font-size: 24rpx;
  color: #999;
  display: block;
  margin-top: 8rpx;
}

.backup-actions {
  display: flex;
  gap: 12rpx;
}

/* 搜索框 */
.search-input {
  width: 100%;
  background: #f5f5f5;
  padding: 20rpx 24rpx;
  border-radius: 12rpx;
  font-size: 28rpx;
  box-sizing: border-box;
  margin-bottom: 16rpx;
}

/* 模板提示 */
.template-notice {
  background: #fffbe6;
  border: 1rpx solid #ffe58f;
  border-radius: 8rpx;
  padding: 20rpx;
  margin-bottom: 16rpx;
}

.notice-text {
  font-size: 26rpx;
  color: #d48806;
}
