/* pages/bill-edit/bill-edit.wxss */

.bill-edit-container {
  padding: 24rpx;
  min-height: 100vh;
  background: #f5f5f5;
}

.loading-state {
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  padding: 100rpx 0;
}

.loading-spinner {
  width: 60rpx;
  height: 60rpx;
  border: 4rpx solid #e0e0e0;
  border-top-color: #1890ff;
  border-radius: 50%;
  animation: spin 0.8s linear infinite;
  margin-bottom: 20rpx;
}

@keyframes spin {
  to { transform: rotate(360deg); }
}

.card {
  background: #fff;
  border-radius: 16rpx;
  padding: 32rpx;
  margin-bottom: 24rpx;
  box-shadow: 0 2rpx 12rpx rgba(0,0,0,0.08);
}

.card-title {
  font-size: 36rpx;
  font-weight: 600;
  color: #333;
  margin-bottom: 32rpx;
  display: block;
}

.form-item {
  display: flex;
  align-items: center;
  margin-bottom: 28rpx;
  padding-bottom: 20rpx;
  border-bottom: 1rpx solid #f0f0f0;
}

.form-item:last-child {
  border-bottom: none;
  margin-bottom: 0;
  padding-bottom: 0;
}

.form-label {
  font-size: 28rpx;
  color: #666;
  width: 180rpx;
  flex-shrink: 0;
}

.form-input {
  flex: 1;
  font-size: 28rpx;
  color: #333;
  padding: 16rpx;
  background: #f9f9f9;
  border-radius: 8rpx;
}

.picker-value {
  flex: 1;
  font-size: 28rpx;
  color: #333;
  padding: 16rpx;
  background: #f9f9f9;
  border-radius: 8rpx;
  display: flex;
  justify-content: space-between;
  align-items: center;
}

.picker-arrow {
  font-size: 24rpx;
  color: #999;
}

.action-buttons {
  display: flex;
  gap: 24rpx;
  margin-bottom: 24rpx;
}

.btn-large {
  flex: 1;
  height: 88rpx;
  line-height: 88rpx;
  font-size: 32rpx;
  border-radius: 12rpx;
}

.btn-default {
  background: #f0f0f0;
  color: #666;
}

.btn-primary {
  background: linear-gradient(135deg, #1890ff, #36cfc9);
  color: #fff;
}

.btn-danger {
  background: #ff4d4f;
  color: #fff;
}

.danger-zone {
  margin-top: 48rpx;
  padding-top: 48rpx;
  border-top: 1rpx solid #f0f0f0;
}
